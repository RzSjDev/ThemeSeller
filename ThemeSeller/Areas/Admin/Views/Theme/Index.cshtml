@model IEnumerable<DataLayer.Theme>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeTitle)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <img src="/PageImages/@item.ImageName" class="thumbnail" style="max-width: 120px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeTitle)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.Visit)
        </td>

        <td>
            @item.CreateDate.ToShamsi()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.ThemeID}) |
            @Html.ActionLink("Details", "Details", new {id = item.ThemeID }) |
            @Html.ActionLink("Delete", "Delete", new {id = item.ThemeID })
        </td>
    </tr>
}

</table>
