@model IEnumerable<DataLayer.Theme>
@{
    ViewBag.Title = "ArchiveThemes";
}

<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>آرشیو قالب‌ها</h3> </header>
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/ThemeImages/@item.ImageName">
                <h2> <a href="/News/@item.ThemeID"> @item.ThemeTitle </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                <a href="/News/@item.ThemeID" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }

    </ul>
</section>

